<%- include('../../partials/header.ejs') %>
    <div class="container mx-auto px-2 min-vh-100 mt-[120px]">
        <%-include('../../partials/navBar.ejs') %>
            <div class="container pb-9" >
                <div class="flex flex-col md:flex-row p-4 gap-3 ">
                    <div class="md:w-1/4 ">
                        <div class="bg-white profile_left p-5">
                            <div class="mb-4 d-flex flex-column">
                                <h6>Manage My Account</h6>
                                <a href="#" class="text-decoration-none text-danger">My Profile</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Orders</h6>
                                <a href="/profile/order" class="text-decoration-none">My Orders</a>   
                                <a href="/profile/orderReturn" class="text-decoration-none">My Return</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Address</h6>
                                <a href="/profile/address" class="text-decoration-none">My Address</a>
                            </div>
                        </div>
                    </div>
                    <div class="md:w-3/4 ">
                        <div class="container-fluid bg-white profile_Right py-4 md:p-4">
                            <div class="flex items-center gap-4 overflow-hidden">
                                <img src="/assets/admin/propic.webp" alt="" class="object-cover w-20">
                                <div class="flex-column">
                                    <h3><%=userData.name%></h3>
                                    <p class="p-0 m-0 truncate">Email : <span><%=userData.email%></span></p>
                                    <p class="p-0 m-0">Phone : <span><%=userData.number%></span></p>
                                </div>
                            </div>
                            <form action="/profileUpdate" method="post">
                                <div class="conatiner profile_info pb-5 md:p-3 mt-3">
                                    <div class="container  md:px-5 px-3 pt-4">
                                        <h6 class="text-danger font-semibold">Edit Your Profile</h6>
                                    </div>
                                        <h6 class="text-success px-5"><%=locals.success?success:""%></h6>
                                    <div class="row d-flex  md:px-5 px-3 mt-3 profile_form">
                                        <div class="d-flex flex-column col-lg-6 ">
                                            <label for="" class="py-1">Name</label>
                                            <input type="text" name="name" value="<%=userData.name%>" style="font-size: 13px; color: #939393;">
                                        </div>
                                        <div class="d-flex flex-column col-lg-6 ">
                                            <label for="" class="py-1">Email</label>
                                            <input type="email" name="email" id="email" value="<%=userData.email%>" style="font-size: 13px; color: #939393;">
                                        </div>
                                    </div>
                                    <div class="row d-flex  md:px-5 px-3 mt-3 profile_form">
                                        <div class="d-flex flex-column col-lg-6 ">
                                            <label for="" class="py-1">Phone Number</label>
                                            <input type="number" id="number" name="number" value="<%=userData.number%>" style="font-size: 13px; color: #939393;">
                                        </div>
                                    </div>
                                    <div class="row d-flex  md:px-5 px-3 mt-3 profile_form">
                                        <div class="d-flex flex-column">
                                            <label for="" class="py-1">Password</label>
                                            <label for="" class="text-danger"><%= locals.error?error:""%></label>
                                            <input name="password" type="password" class="mb-3" placeholder="Current Password" >
                                            <input name="password1" type="" class="mb-3" placeholder="New Password">
                                            <input name="password2" type="" class="mb-3" placeholder="Conform New Password">
                                        </div>
                                    </div>
                                    <div class="flex flex-col md:flex-row items-center justify-center gap-2  md:px-5 px-3 mt-3 ">
                                        <button type="submit" class=" p-2 rounded  w-full bg-gradient-to-r from-lightRed to-red text-white">
                                            Save Changes
                                        </button>
                                        <a href="" class=" p-2 rounded  w-full text-center bg-gradient-to-r from-lightRed to-red text-white">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <%-include('../../partials/footer.ejs') %>