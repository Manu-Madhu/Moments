<%- include('../../partials/header.ejs') %>
    <div class="container mx-auto px-2 min-vh-100 mt-[120px]">
        <%-include('../../partials/navBar.ejs') %>
            <div class="container pb-9">
                <div class="flex flex-col md:flex-row p-4 gap-3 ">
                    <div class="md:w-1/4">
                        <div class="container bg-white profile_left p-5">
                            <div class="mb-4 d-flex flex-column">
                                <h6>Manage My Account</h6>
                                <a href="/profile" class="text-decoration-none">My Profile</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Orders</h6>
                                <a href="/profile/order" class="text-decoration-none">My Orders</a>
                                <a href="/profile/orderReturn" class="text-decoration-none">My Return</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Address</h6>
                                <a href="#" class="text-decoration-none  text-danger">My Address</a>
                            </div>
                        </div>
                    </div>
                    <div class="md:w-3/4">
                        <div class="container-fluid bg-white profile_Right p-4">
                            <div class="flex py-3 items-center justify-between ">
                                <div class="text-gradient text-2xl font-semibold ">My Address</div>
                            </div>
                            <div class="row md:px-3 p-1">
                                <div class="px-1">
                                    <div class="md:p-4">
                                        <form action="/profile/address/editAddress" method="post">
                                        <div class="address_bg bg-white md:p-3 rounded border p-1">
                                            <% if(userAddress.length == 0){%>
                                                <div class="bg-white p-2  d-flex align-items-center justify-content-center"  style="position: relative;">
                                                    <h2  style="color: #9a9a9a; opacity: 50%;" >No Address Found !</h2>
                                                    <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_uio5iafn.json"  background="transparent"
                                                      speed="1"  style="width: 150px; "  loop  autoplay>
                                                    </lottie-player>

                                                </div>
                                            <%}else{%>
                                                <div class="bg-white md:p-2 address_selecter">
                                                    <% userAddress.forEach((data,index)=>{%>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <input type="radio" name="selectedAddress" value="<%=data._id%>" required>
                                                        <h6>Select Address</h6>
                                                    </div>
                                                    <div class="address p-2 px-3">
                                                            <span style="color: #9a9a9a; font-size: 13.5px;">
                                                                <Span><%=data.name%>, </Span>
                                                                <Span><%=data.houseName%>, </Span>
                                                                <Span><%=data.street%>,</Span>
                                                                <Span><%=data.city%>,</Span>
                                                                <Span><%=data.state%>,</Span> 
                                                                <br>
                                                                <Span>Ph :<%=data.phone%>,</Span>
                                                                <Span>Pin :<%=data.postalCode%></Span>
                                                            </span>
                                                    </div>
                                                    <%})%>
                                                </div>
                                            <%}%>
                                        </div>
                                        <div class="w-full pt-3 ">
                                            <button class="w-full p-2 bg-gradient-to-r from-lightRed to-red rounded text-white text-xs" type="submit">
                                                Edit Address
                                            </button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="py-3 pt-4">
                                    <h5 class=" fw-bold">Add New Address</h5>
                                </div>
                                <div class="container p-0 m-0 px-1 pb-3">
                                    <div class="address_Form p-4">
                                        <form action="/profile/address/updateAddress" method="post">
                                            <div class="row d-flex">
                                                <div class="col-lg-6 col-12 d-flex flex-column p-2 gap-2 ">
                                                    <label for="">Full Name*</label>
                                                    <input type="text" name="name" required>
                                                </div>
                                                <div class="col-lg-6 col-12 d-flex flex-column p-2 gap-2 ">
                                                    <label for="">House Name*</label>
                                                    <input type="text" name="houseName" required>
                                                </div>
                                            </div>
                                            <div class="row d-flex">
                                                <div class="d-flex col-lg-6 col-12 flex-column p-2 gap-2 ">
                                                    <label for="">Street*</label>
                                                    <input type="text" name="street" required>
                                                </div>
                                                <div class="d-flex col-lg-6 col-12 flex-column p-2 gap-2 ">
                                                    <label for="">Town/City*</label>
                                                    <input type="text" name="city" required>
                                                </div>
                                            </div>
                                            <div class="d-flex row">
                                                <div class="d-flex col-lg-6 flex-column p-2 gap-2 ">
                                                    <label for="">State*</label>
                                                    <input type="text" name="state" required>
                                                </div>
                                                <div class="d-flex col-lg-6 flex-column p-2 gap-2 ">
                                                    <label for="">Phone*</label>
                                                    <input type="number" name="phone" required>
                                                </div>
                                            </div>
                                            <div class="row f-flex align-items-end">
                                                <div class="d-flex col-lg-6 flex-column p-2 gap-2 ">
                                                    <label for="">pin*</label>
                                                    <input type="number" name="postalCode" required>
                                                </div>
                                                <div class="p-2 col-lg-6 billing_button">
                                                    <button class="p-2 bg-gradient-to-r from-lightRed to-red rounded text-white" type="submit">
                                                        Add New Address
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <%-include('../../partials/footer.ejs') %>