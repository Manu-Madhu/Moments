    <div class="container mx-auto px-2 min-vh-100 mt-[120px]">
        <%- include('../partials/adminnav.ejs')%>
            <div class="container mx-auto flex items-center justify-center">
                <div class="flex flex-col md:flex-row w-full p-4 gap-3">
                    <!-- SIDE BAR -->
                    <div class="md:w-1/4 bg-white d-flex pt-4 rounded-lg">
                        <ul class="w-full flex flex-column items-center overflow-hidden p-2 ">
                            <li class="dashOther fw-bold p-1 m-2 ps-4  flex w-full">
                                <img src="/assets/admin/d9.png" alt="" class="object-cover me-2 ">
                                <span><a class="text-decoration-none" style="color: #cdcdcd;"
                                        href="/admin/Dashboard">DashBoard</a></span>
                            </li>
                            <li class="dashOther fw-bold  p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d3.png" alt="" class="object-cover me-2 ">
                                <span>
                                    <a href="/admin/category" class="text-decoration-none"
                                        style="color: #cdcdcd;">Category</a>
                                </span>
                            </li>
                            <li class="sideBarlist border p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d2.png" alt="" class="object-cover me-2">
                                <span>
                                    <a href="/admin/productView" class="text-decoration-none">Product</a>
                                </span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d4.png" alt="" class="object-cover me-2">
                                <span>
                                    <a href="/admin/coustomers" class="text-decoration-none"
                                        style="color: #cdcdcd;">Customer</a>
                                </span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d5.png" alt="" class="object-cover me-2">
                                <span></span>
                                <a href="/admin/order" class="text-decoration-none"
                                    style="color: #cdcdcd;">Order</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d6.png" alt="" class="object-cover me-2">
                                <span></span>
                                <a href="/admin/coupons" class="text-decoration-none"
                                    style="color: #cdcdcd;">Coupons</a></span>
                            </li>
                            <li class="dashOther fw-bold p-1 ps-4 m-2 flex w-full">
                                <img src="/assets/admin/d6.png" alt="" class="object-cover me-2">
                                <span></span>
                                <a href="/admin/logOut" class="text-decoration-none"
                                    style="color: #cdcdcd;">Logout</a></span>
                            </li>
                        </ul>
                    </div>

                    <div class="md:w-3/4">
                        <div class="container p-0 bg-white p_addingWrapper">
                            <div class="container p-5">
                                <form action="/admin/p_adding" method="post" enctype="multipart/form-data">
                                    <div class="row d-flex mb-3">
                                        <div class="col-md-6 d-flex flex-column w-full">
                                            <label for="">Product Name*</label>
                                            <input type="text" class="mt-1 py-2" name="p_name"
                                                placeholder="Product Name" required>
                                        </div>
                                        <div class="col-md-6 d-flex flex-column w-full">
                                            <label for="">Category*</label>
                                            <select name="category" id="category" class="mt-1 py-2">
                                                <option value="">Select Category</option>
                                                <% category.forEach((data)=>{ %>
                                                    <option value="<%= data.categoryName%>">
                                                        <%= data.categoryName%>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row d-flex mb-3 gap-4 p-0 w-full">
                                        <div class='row col-md-6 col-12 p-0 d-flex align-items-center justify-content-between'>
                                            <div class="col-md-6 col-12 p-0 ps-4 d-flex flex-column">
                                                <label for="">Price*</label>
                                                <input id="price" type="tel" class="mt-1 py-2" name="price"
                                                    placeholder="Price" pattern="[0-9]+"
                                                    title="Please enter numbers only" required>
                                            </div>
                                            <div class="col-md-5 col-12 d-flex flex-column p-0">
                                                <label for="">Category Offer Price*</label>
                                                <input id="offerPrice" type="" class="mt-1 py-2" name="c_offerPrice"
                                                    placeholder="Offer Price" required>
                                            </div>
                                        </div>
                                        <div class='row col-md-6 col-12 p-0 d-flex align-items-center justify-content-between'>
                                            <div class="col-md-4 col-12 ps-4 d-flex flex-column p-0">
                                                <label for="">Product Offer*</label>
                                                <input id="ProductOffer" type="" class="mt-1 py-2" name="productOffer"
                                                    placeholder="Product Offer" required>
                                            </div>
                                            <div class="col-md-4 col-12 d-flex flex-column p-0">
                                                <label for="">Final price*</label>
                                                <input id="FinalPrice" type="" class="mt-1 py-2" name="finalPrice"
                                                    placeholder="Final Price" required>
                                            </div>
                                            <div class="col-md-3 col-12 p-0 d-flex flex-column">
                                                <label for="" >Quantity*</label>
                                                <input type="number" class="mt-1 py-2" name="quantity" min="0"
                                                    pattern="[0-9]" title="Please enter number" placeholder="Quantity"
                                                    required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description*</label>
                                        <textarea class="form-control" placeholder="Description" name="description"
                                            rows="4" required></textarea>
                                    </div>
                                    <input type="file" class="form-control my-3 py-2" name="image" multiple>
                                    <div class="mt-3">
                                        <button type="submit" class="bg-gradient-to-r from-lightRed to-red p-2 rounded text-white">Add
                                            Product</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>
    <script>
        const priceInput = document.getElementById('price');
        const offerPrice = document.getElementById('offerPrice');
        const selectedCategory = document.getElementById('category');
        const prodctOfferInput  = document.getElementById('ProductOffer');
        const FinalPrice  = document.getElementById('FinalPrice');
        let value;
        selectedCategory.addEventListener('change', function () {
            value = selectedCategory.value;
        });
        priceInput.addEventListener('input', function () {
            const price = priceInput.value;
            fetch('/admin/Category_OfferValue', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    price: price,
                    value: value
                })
            })
                .then(res => res.json())
                .then(data => {
                    offerPrice.value = data
                })
                .catch(error => {
                    console.log(error)
                })
        });
        prodctOfferInput.addEventListener('input',function(){
            const productDiscount = prodctOfferInput.value;
            const value = offerPrice.value
            const p_discount = productDiscount/100;
            const finalProductPrice = Math.floor(value - (value*p_discount));
            FinalPrice.value = finalProductPrice;
        })
    </script>

